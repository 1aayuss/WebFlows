{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["packages-database", "packages-types"],
      "inputs": ["apps/**"],
      "outputs": ["apps/**/.next/**", "packages/**/dist/**", "apps/**/dist/**"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "packages-database": {
      "inputs": ["packages/database/index.ts"],
      "outputs": ["packages/database/dist/"],
      "cache": true
    },
    "packages-types": {
      "inputs": ["packages/types/index.ts"],
      "outputs": ["packages/types/dist/"],
      "cache": true
    },
    "dev": {
      "dependsOn": ["packages-database", "packages-types"],
      "inputs": ["apps/**"],
      "outputs": [],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "inputs": ["apps/**"],
      "outputs": [],
      "cache": false,
      "persistent": true
    }
  }
}
